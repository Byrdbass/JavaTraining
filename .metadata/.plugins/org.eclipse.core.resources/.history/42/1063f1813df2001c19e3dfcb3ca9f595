package training;

public class P12_If {
	public static void main(String[] args) {
		short a = 50;
		short b = 40;
		
		if (a>b) {
			System.out.println("a is bigger than b");
		} 
		else {
			System.out.println("b is bigger than a");
		}
		
		short x = 7;
		short y = 8;
		if(x%2==0) {
			System.out.println("the number is Even");
		}
		else {
			System.out.println("the number is Odd");
		}
	}

}
