
public class SelectrionControlStruction_exercise1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		short num1 = 3;
		short num2 = 4;
		short num3 = 1;
		
		if (num1>num2 && num1>num3) {
			System.out.println("The maximum value is " + num1);
		}
		else if (num2>num1 && num2> num3) {
			System.out.println("The maximum value is " + num2);
		}
		else if (num3>num1 && num3> num2) {
			System.out.println("The maximum value is " + num3);
		}
		else {
			System.out.println("one or more values are equal");
		}

	}

}
